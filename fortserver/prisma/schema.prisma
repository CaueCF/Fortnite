generator client {
  provider = "prisma-client"
  output   = "../src/generated/prisma"
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

model credenciais {
  id       Int    @id @default(autoincrement())
  userId   Int
  senha    String @db.VarChar(100)
  username String @db.VarChar(50)
  user     user   @relation(fields: [userId], references: [id], onUpdate: Restrict, map: "credenciais_ibfk_1")

  @@index([userId], map: "userId")
}

model user {
  id          Int           @id @default(autoincrement())
  nome        String        @db.VarChar(200)
  vbucks      Int
  credenciais credenciais[]
  inventarios inventarios[]
  transacoes  transacoes[]
}

model inventarios {
  id      Int    @id @default(autoincrement())
  item_id String @db.VarChar(200)
  user_id Int
  user    user   @relation(fields: [user_id], references: [id], onUpdate: Restrict, map: "inventarios_ibfk_1")

  @@index([user_id], map: "user_id")
}

model transacoes {
  id      Int    @id @default(autoincrement())
  item_id String @db.VarChar(200)
  valor   Int
  fluxo   Int
  user_id Int
  user    user   @relation(fields: [user_id], references: [id], onUpdate: Restrict, map: "transacoes_ibfk_1")

  @@index([user_id], map: "user_id")
}
