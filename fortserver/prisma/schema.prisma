generator client {
  provider = "prisma-client"
  output   = "../src/generated/prisma"
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

model user {
  id          Int           @id @default(autoincrement())
  email       String        @db.VarChar(200)
  senha       String        @db.VarChar(200)
  nome        String        @db.VarChar(200)
  vbucks      Int           @default(10000)
  inventarios inventarios[]
  transacoes  transacoes[]
}

model inventarios {
  id      Int    @id @default(autoincrement())
  item_id String @db.VarChar(200)
  user_id Int
  user    user   @relation(fields: [user_id], references: [id], onUpdate: Restrict, map: "inventarios_ibfk_1")

  @@index([user_id], map: "user_id")
}

model transacoes {
  id        Int      @id @default(autoincrement())
  item_id   String   @db.VarChar(200)
  valor     Int
  fluxo     Int
  user_id   Int
  occuredAt DateTime @default(now()) @db.Date
  user      user     @relation(fields: [user_id], references: [id], onUpdate: Restrict, map: "transacoes_ibfk_1")

  @@index([user_id], map: "user_id")
}
